{% extends 'base.html.twig' %}

{% block title 'Connexion' %}
{% block body %}


    <!-- ============================================-->
    <!-- <section> begin ============================-->
    <section class="py-0" id="page-signin">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 px-0">
                    <div class="sticky-top vh-lg-100 py-9">
                        <div class="bg-holder" style="background-image:url({{ asset('img/signin.jpg') }});" data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'>
                        </div>
                        <!--/.bg-holder-->

                    </div>
                </div>
                <div class="col-lg-6 bg-white py-6">
                    <div class="row h-100 align-items-center justify-content-center">
                        <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8" data-zanim-xs='{"delay":0.5,"animation":"slide-right"}' data-zanim-trigger="scroll">
                            <h3 class="display-4 fs-2">Entrá si querés,
                                <br/>salí si podés</h3>
                            <h6 class="text-danger mt-3">Muy, muy peligroso</h6>

<!-- FORMULARIO -->

                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey | trans(error.messagedata, 'security') }}
                                </div>
                            {% endif %}

                            <form action="{{ path('login') }}" method="post" class="mt-5">
                                <div class="form-group">
                                    <input type="email" name="_username" class="form-control border-300 bg-light"  placeholder="Adresse email" required />
                                </div>
                                <div class="form-group">
                                    <input type="password" name="_password" class="form-control border-300 bg-light" placeholder="Mot de passe" required/>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-dark btn-block mt-3" type="submit" name="submit">Se connecter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end of .container-->

    </section>
    <!-- <section> close ============================-->
    <!-- ============================================-->


{% endblock %}